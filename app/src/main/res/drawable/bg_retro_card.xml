<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="schemas.android.com">

    <!-- 1. BAYANGAN (Shadow) -->
    <item
        android:left="4dp"
        android:top="4dp">
        <!-- Pastikan tidak ada atribut lain di dalam tag <item> selain posisi -->
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- 2. KARTU UTAMA (Foreground) -->
    <item
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke android:width="3dp" android:color="#000000" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>
